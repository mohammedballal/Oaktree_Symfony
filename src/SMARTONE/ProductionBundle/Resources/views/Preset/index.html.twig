{% extends '::base.html.twig' %}

{% block body -%}
<div class="padding">
    <div class="row">
        <div class="col-md-12">
            <div class="box">

                <div class="box-header">
                    <h2>Preset list</h2>
                </div>

    <table class="table table-striped table-condensed">
        <thead>
            <tr>
                <th>Id</th>
                <th>Badge</th>
                <th>Feet</th>
                <th>Bedaction</th>
                <th>Comment</th>
                <th>Endbar</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('preset_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.badge }}</td>
                <td>{{ entity.feet }}</td>
                <td>{{ entity.bedAction }}</td>
                <td>{{ entity.comment }}</td>
                <td>{{ entity.endBar }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('preset_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('preset_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
                    <div class="dker p-a text-right">
                    <a ui-sref="app.widget" class="btn info" href="{{ path('preset_new') }}">
                        New Preset
                    </a>
                </div>
                </div>

        </div>
    </div>
</div>

{% endblock %}
