{% extends '::base.html.twig' %}

{% block body -%}
<div class="padding">
    <div class="row">
        <div class="col-md-12">
            <div class="box">

                <div class="box-header">
                    <h2>Badge list</h2>
                </div>

    <table class="table table-striped table-condensed">
        <thead>
            <tr>
                <th>Id</th>
                <th>Badgename</th>
                <th>Sortorder</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('badge_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.badgeName }}</td>
                <td>{{ entity.sortOrder }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('badge_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('badge_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
                    <div class="dker p-a text-right">
                    <a ui-sref="app.widget" class="btn info" href="{{ path('badge_new') }}">
                        New Badge
                    </a>
                </div>
                </div>

        </div>
    </div>
</div>

{% endblock %}
