{% extends '::base.html.twig' %}

{% block body -%}
    <h1>BedAction</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Actionname</th>
                <td>{{ entity.actionName }}</td>
            </tr>
            <tr>
                <th>Width</th>
                <td>{{ entity.width }}</td>
            </tr>
            <tr>
                <th>Length</th>
                <td>{{ entity.length }}</td>
            </tr>
            <tr>
                <th>Actiontype</th>
                <td>{{ entity.actionType }}</td>
            </tr>
            <tr>
                <th>Isupgradable</th>
                <td>{{ entity.isUpgradable }}</td>
            </tr>
            <tr>
                <th>Handsettype</th>
                <td>{{ entity.handsetType }}</td>
            </tr>
            <tr>
                <th>Sortorder</th>
                <td>{{ entity.sortOrder }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('bedaction') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('bedaction_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
