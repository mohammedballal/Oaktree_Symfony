{% extends '::base.html.twig' %}

{% block body -%}
    <style>
        td {
            vertical-align: middle !important;
        }
    </style>
<div class="padding">
    <div class="row">
        <div class="col-md-12">
            <div class="box">

                <div class="box-header">
                    <h2>Orders Received</h2>
                </div>

                <div class="-body">
    <table class="table table-striped table-condensed">
        <thead>
            <tr>
                {#<th>Id</th>#}
                <th>Order No</th>
                <th>Order Receive Date</th>
                <th>Brand</th>
                <th>Comments</th>
                <th class="text-center">Order Status</th>

                {#<th>Cancelcomment</th>#}
                {#<th>Deliveryaddress</th>#}
                {#<th>Deliveryscheduledate</th>#}
                {#<th>Deliveryscheduleday</th>#}
                {#<th>Booking Ref</th>#}
                <th class="text-right">Actions</th>
            </tr>
        </thead>
        <tbody>
        <tr>
            <td colspan="7" style="background-color: green; font-weight: bold; color: #ffffff; font-size: 18px;">Oaktree  {% if is_granted('ROLE_ADMIN') %}({{ oaktree|length }}){% endif %}</td>
        </tr>
        {% for entity in oaktree %}
            <tr>
                <td>{{ entity.orderNo }}</td>
                <td>{% if entity.orderReceiveDate %}{{ entity.orderReceiveDate|date('d/m/Y') }}{% endif %}</td>
                <td>{{ entity.brand }}</td>
                <td>{{ entity.comments }}</td>
                <td align="center">{{ entity.orderStatus }}</td>
                {#<td>{{ entity.cancelComment }}</td>#}
                {#<td>{{ entity.deliveryAddress }}</td>#}
                {#<td>{% if entity.deliveryScheduleDate %}{{ entity.deliveryScheduleDate|date('Y-m-d H:i:s') }}{% endif %}</td>#}
                {#<td>{% if entity.deliveryScheduleDay %}{{ entity.deliveryScheduleDay|date('Y-m-d H:i:s') }}{% endif %}</td>#}
                {#<td>{% if entity.bookingRef %}{{ entity.bookingRef|date('Y-m-d H:i:s') }}{% endif %}</td>#}
                <td align="right">
                    {% if is_granted('ROLE_ADMIN') %}
                    <a class="btn btn-xs btn-info" href="{{ path('order_edit', { 'id': entity.id }) }}">Edit</a>
                    <a class="btn btn-xs btn-danger" href="{{ path('cancel_order_edit', { 'id': entity.id }) }}">Cancel Order</a>
                    <a class="btn btn-xs btn-warning" href="{{ path('hold_order_edit', { 'id': entity.id }) }}">Hold Order</a>
                    {% endif %}
                </td>
            </tr>
        {% endfor %}
        <tr>
            <td colspan="7" style="background-color: navy; font-weight: bold; color: #ffffff; font-size: 18px;">Middleton  {% if is_granted('ROLE_ADMIN') %}({{ middleton|length }}){% endif %}</td>
        </tr>
        {% for entity in middleton %}
            <tr>
                <td>{{ entity.orderNo }}</td>
                <td>{% if entity.orderReceiveDate %}{{ entity.orderReceiveDate|date('d/m/Y') }}{% endif %}</td>
                <td>{{ entity.brand }}</td>
                <td>{{ entity.comments }}</td>
                <td align="center">{{ entity.orderStatus }}</td>
                {#<td>{{ entity.cancelComment }}</td>#}
                {#<td>{{ entity.deliveryAddress }}</td>#}
                {#<td>{% if entity.deliveryScheduleDate %}{{ entity.deliveryScheduleDate|date('Y-m-d H:i:s') }}{% endif %}</td>#}
                {#<td>{% if entity.deliveryScheduleDay %}{{ entity.deliveryScheduleDay|date('Y-m-d H:i:s') }}{% endif %}</td>#}
                {#<td>{% if entity.bookingRef %}{{ entity.bookingRef|date('Y-m-d H:i:s') }}{% endif %}</td>#}
                <td align="right">
                    {% if is_granted('ROLE_ADMIN') %}
                    <a class="btn btn-xs btn-info" href="{{ path('order_edit', { 'id': entity.id }) }}">Edit</a>
                    <a class="btn btn-xs btn-danger" href="{{ path('cancel_order_edit', { 'id': entity.id }) }}">Cancel Order</a>
                    <a class="btn btn-xs btn-warning" href="{{ path('hold_order_edit', { 'id': entity.id }) }}">Hold Order</a>
                    {% endif %}
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
                </div>
                {% if is_granted('ROLE_ADMIN') %}
                    <div class="dker p-a text-right">
                    <a ui-sref="app.widget" class="btn info" href="{{ path('order_new') }}">
                        New Order
                    </a>
                </div>
                {% endif %}
                </div>

        </div>
    </div>
</div>

{% endblock %}
