{% extends '::base.html.twig' %}

{% block body -%}
    <style>
        td {
            vertical-align: middle !important;
        }
    </style>
    <div class="padding">
        <div class="row">
            <div class="col-md-12">
                <div class="box">

                    <div class="box-header">
                        <h2>Order list</h2>
                    </div>
                    <form method="post" action="{{ path('docorder_add_orders_post', {'id' : entity.id}) }}">
                    <div class="-body">
                        <table class="table table-striped table-condensed">
                            <thead>
                            <tr>
                                <th></th>
                                <th>Order No</th>
                                <th>Order Receive Date</th>
                                <th>Brand</th>
                                <th>Comments</th>
                                <th class="text-center">Order Status</th>

                                {#<th>Cancelcomment</th>#}
                                {#<th>Deliveryaddress</th>#}
                                {#<th>Deliveryscheduledate</th>#}
                                {#<th>Deliveryscheduleday</th>#}
                                {#<th>Booking Ref</th>#}
                                <th class="text-right">Actions</th>
                            </tr>
                            </thead>
                            <tbody>
                            <tr>
                                <td colspan="7" style="background-color: {% if entity.brand == 'Oaktree' %}green{% else %}navy{% endif %}; font-weight: bold; color: #ffffff; font-size: 18px;">{{ entity.brand }}</td>
                            </tr>
                            {% for entity in entities %}
                                <tr>
                                    <td width="50" align="center"><input type="checkbox" name="ids[]" value="{{ entity.id }}"> </td>
                                    <td>{{ entity.orderNo }}</td>
                                    <td>{% if entity.orderReceiveDate %}{{ entity.orderReceiveDate|date('d/m/Y') }}{% endif %}</td>
                                    <td>{{ entity.brand }}</td>
                                    <td>{{ entity.comments }}</td>
                                    <td align="center">{{ entity.orderStatus }}</td>
                                    {#<td>{{ entity.cancelComment }}</td>#}
                                    {#<td>{{ entity.deliveryAddress }}</td>#}
                                    {#<td>{% if entity.deliveryScheduleDate %}{{ entity.deliveryScheduleDate|date('Y-m-d H:i:s') }}{% endif %}</td>#}
                                    {#<td>{% if entity.deliveryScheduleDay %}{{ entity.deliveryScheduleDay|date('Y-m-d H:i:s') }}{% endif %}</td>#}
                                    {#<td>{% if entity.bookingRef %}{{ entity.bookingRef|date('Y-m-d H:i:s') }}{% endif %}</td>#}
                                    <td align="right">
                                        <a class="btn btn-xs btn-info" href="{{ path('order_edit', { 'id': entity.id }) }}">Edit</a>
                                    </td>
                                </tr>
                            {% endfor %}

                            </tbody>
                        </table>
                    </div>
                    <div class="dker p-a text-right">
                        <a ui-sref="app.widget" class="btn btn-default" href="{{ path('docorder_show', {'id' : entity.id}) }}">
                            Back
                        </a>
                        <button type="submit" ui-sref="app.widget" class="btn btn-success" href="{{ path('order_new') }}">
                            Add Selection to Doc: {{ entity.docNo }}
                        </button>
                    </div>
                    </form>
                </div>

            </div>
        </div>
    </div>

{% endblock %}
