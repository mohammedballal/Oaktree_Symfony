{% extends '::base.html.twig' %}

{% block body -%}
<div class="padding">
    <div class="row">
        <div class="col-md-12">
            <div class="box">

                <div class="box-header">
                    <h2>Docorder list</h2>
                </div>

    <table class="table table-striped table-condensed">
        <thead>
            <tr>
                <th>Doc No</th>
                <th>Brand</th>
                <th class="text-center">No. of Orders</th>
                <th class="text-center">Total No. of Items</th>
                <th class="text-center">Is View Manifest</th>
                <th class="text-right">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>{{ entity.docNo }}</td>
                <td>{{ entity.brand }}</td>
                <td align="center">{{ entity.saleOrder|length }}</td>
                <td align="center">{{ entity.totalItems }}</td>
                <td align="center">{{ entity.viewManifest ? 'YES' : 'NO' }}</td>
                <td align="right">
                    <a class="btn btn-xs btn-info" href="{{ path('docorder_show', { 'id': entity.id }) }}">Show</a>
                    <a class="btn btn-xs btn-info" href="{{ path('docorder_edit', { 'id': entity.id }) }}">Edit</a>
                    <a class="btn btn-xs btn-danger" href="{{ path('docorder_pdf', { 'id': entity.id }) }}">PDF</a>
                    <a class="btn btn-xs black" href="{{ path('docorder_pdf_labels', { 'id': entity.id }) }}">Labels</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
                    <div class="dker p-a text-right">
                    <a ui-sref="app.widget" class="btn info" href="{{ path('docorder_new') }}">
                        New Schedule
                    </a>
                </div>
                </div>

        </div>
    </div>
</div>

{% endblock %}
