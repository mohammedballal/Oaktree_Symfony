{% extends '::base.html.twig' %}


{% block body -%}

    <style>
        td {
            vertical-align: middle !important;
            font-size: 20px;
        }
    </style>

    <div class="padding">
        <div class="row">
            <div class="col-md-12">
                <div class="box">

                    <div class="box-header">
                        <h2>Courier list</h2>
                    </div>

                    <table class="records_list table table-striped">
                        <thead>
                        <tr>
                            <th style="text-align: center;"></th>
                            <th style="text-align: left;">Courier Name</th>
                            <th style="text-align: left;">Courier Number</th>
                            <th style="text-align: right;">Action</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for entity in entities %}
                            <tr>
                                <td width="200" style="padding: 1px; background-color: #{{ entity.color }}"><img height="50" src="/{{ entity.webPath }}"></td>
                                <td style="background-color: #{{ entity.color }}">{{ entity.courierName }}</td>
                                <td style="background-color: #{{ entity.color }}">{{ entity.courierNumber }}</td>
                                <td align="right" style="background-color: #{{ entity.color }}">
                                    <a class="btn btn-info btn" href="{{ path('courier_edit', { 'id': entity.id }) }}">Edit</a>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                    <div class="dker p-a text-right">
                        <a ui-sref="app.widget" class="btn info" href="{{ path('courier_new') }}">
                            New Courier
                        </a>
                    </div>
                </div>

            </div>
        </div>
    </div>
{% endblock %}
