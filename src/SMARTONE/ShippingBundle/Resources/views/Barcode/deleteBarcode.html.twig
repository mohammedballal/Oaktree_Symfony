{% extends '::base.html.twig' %}


{% block body -%}
    <div class="padding">
        <div class="row">
            <div class="col-md-12">
                <div class="box">
                    <div class="box-header">
                        <h2>Delete Barcode: #{{ entity }}</h2>
                    </div>
                    <div class="box-divider m-a-0"></div>
                    {{ form_start(form) }}
                    <div class="box-body" style="padding-bottom: 40px;">
                        {% for child in form.children %}
                            {% if child.vars.name != 'submit' %}
                                {{ form_row(child) }}
                            {% endif %}
                        {% endfor %}
                    </div>
                    <div class="dker p-a text-right">
                        <a href="{{ path('shipment_show', {'id' : entity.shipment.id}) }}" class="btn btn-default">Back</a>
                        {{ form_widget(form.submit) }}
                    </div>
                    {{ form_end(form) }}
                </div>

            </div>
        </div>
    </div>
{% endblock %}