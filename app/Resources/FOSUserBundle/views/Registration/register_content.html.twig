{% trans_default_domain 'FOSUserBundle' %}

{% form_theme form 'bootstrap_3_layout.html.twig' %}

<div class="p-a-md box-color r box-shadow-z1 text-color m-a">
<form class="panel-body wrapper-lg" data-validate="parsley" action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST">
    {#{{ form_row(form.username, {'attr':{'placeholder':'Username'},'label':'Username'} ) }}#}

    {{ form_row(form.email, {'attr':{ 'placeholder':'Email'},'label':'Email'} ) }}

    {#{{ form_row(form.firstName) }}#}
    {#{{ form_row(form.lastName) }}#}

    {{ form_row(form.plainPassword) }}

    {{ form_widget(form) }}
    <div>
        <input class="btn primary btn-block p-x-md" type="submit" value="{{ 'registration.submit'|trans }}" />
    </div>

    <a href="{{ path('fos_user_security_login') }}" class="text-primary _600"><i class="fa fa-angle-double-left " style="margin-top: 10px;"> Go Back</i></a>
    <a href="{{ path('fos_user_security_login') }}" class="text-primary _600 pull-right" style="margin-top: 10px;">Login</a>
</form>
    </div>


