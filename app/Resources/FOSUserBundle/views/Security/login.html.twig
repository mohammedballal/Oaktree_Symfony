{% extends "FOSUserBundle::layout.html.twig" %}

{% block title %} {{ parent() }} Login {% endblock %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
{% if error %}
    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}
    <div class="p-a-md box-color r box-shadow-z1 text-color m-a">
        <form class="panel-body wrapper-lg" ui-jp="parsley" novalidate action="{{ path("fos_user_security_check") }}" method="post">
    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

            <div class="md-form-group">
                <input type="text" id="username" name="_username" class="md-input" value="{{ last_username }}"  required="required">
                <label class="active">Username</label>
            </div>
            <div class="md-form-group">
                <input class="md-input" type="password" id="password" name="_password" required="required" >
                <label>Password</label>
            </div>

            <input class="btn dark btn-block p-x-md" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
        </form>
    </div>
{% endblock fos_user_content %}
